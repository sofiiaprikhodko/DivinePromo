@section Styles {
    <style>
        .merch-container {
            padding: 2rem 0;
            background: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)), url('/images/backgrounds/merch-bg.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            min-height: 100vh;
        }

        .content-wrapper {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        .section-title {
            text-align: center;
            font-size: 4rem;
            margin-bottom: 3rem;
            background: linear-gradient(45deg, #ffffff, #ffffff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: 900;
            text-transform: uppercase;
            letter-spacing: 4px;
            font-family: 'Cinzel', serif;
            text-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            position: relative;
            animation: titleGlow 2s infinite ease-in-out;
        }

        @@keyframes titleGlow {
            0%, 100% {
                opacity: 1;
                text-shadow: 0 0 20px rgba(255, 255, 255, 0.5), 0 0 40px rgba(196, 104, 135, 0.3), 0 0 60px rgba(196, 104, 135, 0.2);
            }

            50% {
                opacity: 0.9;
                text-shadow: 0 0 30px rgba(255, 255, 255, 0.8), 0 0 50px rgba(196, 104, 135, 0.5), 0 0 70px rgba(196, 104, 135, 0.3);
            }
        }

        .countdown {
            text-align: center;
            margin-bottom: 3rem;
            padding: 2rem;
            background: rgba(0, 0, 0, 0.5);
            border-radius: 15px;
            border: 1px solid #e0e0e0;
        }

            .countdown h2 {
                font-family: 'Cinzel', serif;
                font-size: 2rem;
                margin-bottom: 1rem;
                color: #c46887;
            }

        #timer {
            font-size: 3rem;
            font-weight: bold;
            font-family: 'Courier New', monospace;
            background: linear-gradient(45deg, #e0e0e0, #e0e0e0);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .merch-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 2rem;
            margin-bottom: 3rem;
        }

        .merch-item {
            background: rgba(0, 0, 0, 0.7);
            border-radius: 10px;
            padding: 1rem;
            border: 1px solid #333;
            transition: transform 0.3s ease, border-color 0.3s ease;
            text-align: center;
        }

            .merch-item:hover {
                transform: translateY(-5px);
                border-color: #c46887;
            }

        .merch-image {
            width: 100%;
            height: 200px;
            background: #333;
            border-radius: 8px;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #666;
            font-size: 0.9rem;
        }

        .merch-name {
            margin-bottom: 0.5rem;
            color: #c46887;
        }

        .albums-section {
            margin-top: 3rem;
        }

        .albums-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 2rem;
        }

        .album-item {
            background: rgba(0, 0, 0, 0.7);
            border-radius: 10px;
            padding: 1.5rem;
            border: 1px solid #333;
            text-align: center;
        }

        .album-image {
            width: 100%;
            height: 250px;
            background: #333;
            border-radius: 8px;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #666;
        }
    </style>
}

<div class="merch-container">
    <div class="content-wrapper">
        <h1 class="section-title">Divine Collection</h1>

        <div class="countdown">
            <h2>Pre-order Starts In</h2>
