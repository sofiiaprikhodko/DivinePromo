                </div>
                <div class="album-item">
                    <img src="/images/albums/version-c.jpg" class="album-image" alt="Divine Version C">
                    <div class="album-name">DO IT Version C</div>
                    <div class="album-price">$29.99</div>
                </div>
                <div class="album-item">
                    <img src="/images/albums/version-d.jpg" class="album-image" alt="Limited Edition">
                    <div class="album-name">Limited Edition</div>
                    <div class="album-price">$39.99</div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateCountdown() {
            const targetDate = new Date('December 2, 2025 00:00:00').getTime();
            const now = new Date().getTime();
            const distance = targetDate - now;

            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            document.getElementById('timer').innerHTML =
                `${days}d ${hours}h ${minutes}m ${seconds}s`;

            if (distance < 0) {
                document.getElementById('timer').innerHTML = "PRE-ORDER NOW!";
            }
        }

        setInterval(updateCountdown, 1000);
        updateCountdown();
    </script>
}