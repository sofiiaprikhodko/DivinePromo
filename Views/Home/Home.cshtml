@section Styles {
    <style>
        .home-container {
            min-height: 100vh;
            background: linear-gradient(135deg, #000000 0%, #12080b 30%, #481e2c 70%, #6c2d42 100%);
            padding: 2rem 0 0 0;
            width: 100vw;
            margin: 0;
        }

        .section-title {
            text-align: center;
            font-size: 4rem;
            margin-bottom: 3rem;
            background: linear-gradient(45deg, #ffffff, #ffffff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: 900;
            text-transform: uppercase;
            letter-spacing: 4px;
            font-family: 'Cinzel', serif;
            text-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            position: relative;
            animation: titleGlow 2s infinite ease-in-out;
        }

        @@keyframes titleGlow {
            0%, 100% {
                opacity: 1;
                text-shadow: 0 0 20px rgba(255, 255, 255, 0.5), 0 0 40px rgba(196, 104, 135, 0.3), 0 0 60px rgba(196, 104, 135, 0.2);
            }

            50% {
                opacity: 0.9;
                text-shadow: 0 0 30px rgba(255, 255, 255, 0.8), 0 0 50px rgba(196, 104, 135, 0.5), 0 0 70px rgba(196, 104, 135, 0.3);
            }
        }

        .masonry-grid {
            column-count: 4;
            column-gap: 2rem; 
            margin: 0 2rem; 
            max-width: none; 
        }

        .grid-item {
            break-inside: avoid;
            margin-bottom: 2rem;
            border-radius: 15px;
            overflow: hidden;
            background: rgba(0, 0, 0, 0.8);
            border: 1px solid #333;
            transition: transform 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
            opacity: 1 !important;
            transform: none !important;
        }

            .grid-item:hover {
                transform: translateY(-5px);
                border-color: #c46887;
                box-shadow: 0 10px 25px rgba(196, 104, 135, 0.3);
            }

        .photo-item {
            width: 100%;
            height: auto;
            display: block;
            object-fit: cover;
        }

        .quote-item {
            padding: 2.5rem;
            text-align: center;
            font-style: italic;
            font-size: 1.3rem;
            color: #e0e0e0;
            background: #000000;
            backdrop-filter: blur(15px);
            border: 1px solid #000000;
            font-family: 'Playfair Display', serif;
            line-height: 1.6;
        }

        .video-embed {
            position: relative;
            width: 100%;
            padding-bottom: 56.25%; /* 16:9 співвідношення */
            height: 0;
            border-radius: 15px;
            overflow: hidden;
            background: rgba(0, 0, 0, 0.8);
            transition: all 0.3s ease;
        }

            .video-embed:hover {
                transform: scale(1.02);
                box-shadow: 0 10px 25px rgba(196, 104, 135, 0.3);
            }

            .video-embed iframe {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                border: none;
            }

        /* Адаптивність */
        @@media (max-width: 1200px) {
            .masonry-grid {
                column-count: 3;
            }

            .section-title {
                font-size: 3rem;
            }
        }

        @@media (max-width: 768px) {
            .masonry-grid {
                column-count: 2;
                margin: 0 1rem;
                column-gap: 1.5rem;
            }

            .section-title {
                font-size: 2.5rem;
                letter-spacing: 2px;
            }

            .quote-item {
                padding: 2rem;
                font-size: 1.1rem;
            }

            .video-item {
                font-size: 1.1rem;
                height: 180px;
            }
        }

        @@media (max-width: 480px) {
            .masonry-grid {
                column-count: 1;
                margin: 0 1rem;
            }

            .section-title {
                font-size: 2rem;
            }
        }
    </style>
}

