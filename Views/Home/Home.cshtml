@section Scripts {
    <script>
        // Плавний паралакс ефект для фону
        gsap.registerPlugin(ScrollTrigger);

        gsap.to('.home-container', {
            backgroundPosition: '50% 100%',
            ease: "none",
            scrollTrigger: {
                trigger: '.home-container',
                start: "top bottom",
                end: "bottom top",
                scrub: true
            }
        });

        // Прості hover анімації для елементів
        gsap.utils.toArray('.grid-item').forEach(item => {
            item.addEventListener('mouseenter', () => {
                gsap.to(item, {
                    duration: 0.3,
                    scale: 1.02,
                    ease: "power2.out"
                });
            });

            item.addEventListener('mouseleave', () => {
                gsap.to(item, {
                    duration: 0.3,
                    scale: 1,
                    ease: "power2.out"
                });
            });
        });
    </script>
